{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../../pages/src"],
      "@grexie/pages/*": ["../../pages/src/*"]
    }
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}