{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../pages/src"],
      "@grexie/pages/api": ["../pages/src/api"],
      "@grexie/resolvable": ["../utils/resolvable/src"],
      "@grexie/pages-runtime-hmr": ["../runtime/hmr/src"],
      "@grexie/is-plain-object": ["../utils/is-plain-object/src"],
      "@grexie/promisify": ["../utils/promisify/src"],
      "@grexie/mutex": ["../utils/mutex/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"],
  "references": [
    {
      "path": "../pages"
    },
    {
      "path": "../utils/resolvable"
    },
    {
      "path": "../runtime/hmr"
    },
    {
      "path": "../utils/is-plain-object"
    },
    {
      "path": "../utils/promisify"
    },
    {
      "path": "../utils/mutex"
    }
  ]
}
