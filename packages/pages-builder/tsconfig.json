{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../pages/src"],
      "@grexie/pages/*": ["../pages/src/*"],
      "@grexie/pages-resources-plugin": ["../webpack/resources-plugin/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../pages"
    },
    {
      "path": "../webpack/resources-plugin"
    }
  ]
}