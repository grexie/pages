{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../pages/src"],
      "@grexie/pages/api": ["../pages/src/api"],
      "@grexie/pages-runtime-hmr": ["../runtime/hmr/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [],
  "references": [
    {
      "path": "../pages"
    },
    {
      "path": "../runtime/hmr"
    }
  ]
}
