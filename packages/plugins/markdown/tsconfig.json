{
    "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../../pages/lib"],
      "@grexie/pages/*": ["../../pages/lib/*"],
      "@grexie/pages-builder": ["../../pages-builder/lib"],
      "@grexie/pages-runtime-styles": ["../../runtime/styles"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../../pages-builder"
    },
    {
      "path": "../../runtime/styles"
    }
  ]
}