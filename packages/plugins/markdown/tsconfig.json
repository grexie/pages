{
    "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../../pages/src"],
      "@grexie/pages/*": ["../../pages/src/*"],
      "@grexie/pages-builder": ["../../pages-builder/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../../pages-builder"
    }
  ]
}