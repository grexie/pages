{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../../pages/src"],
      "@grexie/pages-builder": ["../../pages-builder/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../../pages"
    },
    {
      "path": "../../pages-builder"
    }
  ]
}