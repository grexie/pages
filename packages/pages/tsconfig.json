{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/hash-object": ["../utils/hash-object/src"],
      "@grexie/context": ["../utils/context/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}