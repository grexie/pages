{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/",
    "rootDir": "./src/",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages-builder": ["../../pages-builder/src"],
      "@grexie/pages": ["../../pages/src"],
      "@grexie/pages/api": ["../../pages/src/api"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"],
  "references": [
    {
      "path": "../../pages-builder"
    },
    {
      "path": "../../pages"
    }
  ]
}
