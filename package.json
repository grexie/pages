{
  "version": "0.0.5",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "clean": "git clean -dfX && yarn install --force && yarn build",
    "start": "npm-run-all -p start:tsc start:build",
    "start:tsc": "tsc -b -w --preserveWatchOutput",
    "start:build": "monorepo run -p build -w",
    "build": "tsc -b && monorepo run build",
    "publish": "yarn build && monorepo workspaces npm publish",
    "link": "monorepo workspaces yarn link",
    "unlink": "monorepo workspaces yarn unlink",
    "release": "release-it",
    "test": "node --no-warnings --experimental-specifier-resolution=node --experimental-import-meta-resolve --experimental-vm-modules ./node_modules/.bin/jest",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.41",
    "@types/source-map-support": "^0.5.4",
    "babel-plugin-source-map-support": "^2.1.3",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.0",
    "postinstall-postinstall": "^2.1.0",
    "release-it": "^14.12.5",
    "release-it-yarn-workspaces": "^2.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "plugins": {
      "release-it-yarn-workspaces": {
        "workspaces": [
          "packages/*"
        ],
        "additionalManifests": {
          "versionUpdates": [
            "package.json",
            "packages/*/package.json"
          ],
          "dependencyUpdates": [
            "package.json",
            "packages/*/package.json"
          ]
        }
      }
    },
    "npm": false
  },
  "type": "module"
}
