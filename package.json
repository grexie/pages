{
  "name": "@grexie/pages-root",
  "version": "1.0.30",
  "private": true,
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/pages*",
      "packages/plugins/*",
      "packages/runtime/*",
      "packages/utils/*",
      "packages/webpack/*",
      "tools/*"
    ]
  },
  "type": "module",
  "scripts": {
    "example": "monorepo example",
    "clean": "git clean -qdfX && yarn install --force && yarn build",
    "start": "npm-run-all -p start:types start:build",
    "start:types": "yarn build:types -w --preserveWatchOutput",
    "start:build": "monorepo run -p start",
    "build": "monorepo generate:tsconfig && monorepo run build && yarn build:types",
    "build:types": "tsc -b",
    "publish": "yarn build && monorepo workspaces npm publish",
    "depcheck": "monorepo workspaces depcheck --ignores @jest/globals,util-browserify --ignore-dirs lib 2>&1",
    "dev:link": "monorepo workspaces yarn link",
    "dev:unlink": "monorepo workspaces yarn unlink",
    "test": "mocha"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.22.1",
    "@babel/plugin-syntax-flow": "^7.21.4",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.22.2",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.17.12",
    "@release-it-plugins/workspaces": "^3.2.0",
    "@testing-library/react": "^14.0.0",
    "@types/babel__core": "^7.20.2",
    "@types/chai-as-promised": "^7.1.5",
    "@types/jsdom": "^21.1.1",
    "@types/jsdom-global": "^3.0.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/source-map-support": "^0.5.4",
    "babel-plugin-source-map-support": "^2.1.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "depcheck": "^1.4.3",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.8.1",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "release-it": "^15.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grexie/pages.git"
  },
  "release-it": {
    "github": true,
    "npm": {
      "ignoreVersion": true,
      "versionArgs": [
        "--allow-same-version",
        "--workspaces-update=false"
      ],
      "publishArgs": [
        "--include-workspace-root"
      ]
    },
    "plugins": {
      "@release-it-plugins/workspaces": true
    }
  }
}
