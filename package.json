{
  "name": "@grexie/pages-root",
  "version": "1.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/pages*",
      "packages/plugins/*",
      "packages/runtime/*",
      "packages/utils/*",
      "packages/webpack/*",
      "tools/*"
    ]
  },
  "type": "module",
  "scripts": {
    "example": "monorepo example",
    "clean": "git clean -qdfX && yarn install --force && yarn build",
    "start": "npm-run-all -p start:types start:build",
    "start:types": "yarn build:types -w --preserveWatchOutput",
    "start:build": "monorepo run -p watch",
    "build": "monorepo generate:tsconfig && monorepo run build && yarn build:types",
    "build:types": "tsc -b",
    "publish": "yarn build && monorepo workspaces npm publish",
    "depcheck": "monorepo workspaces depcheck --ignores @jest/globals,util-browserify --ignore-dirs lib 2>&1",
    "dev:link": "monorepo workspaces yarn link",
    "dev:unlink": "monorepo workspaces yarn unlink",
    "release": "semantic-release",
    "test": "NODE_OPTIONS=\"${NODE_OPTIONS} --loader=@grexie/pages-builder/loader --loader=./tools/jest/loader --no-warnings --experimental-specifier-resolution=node --experimental-import-meta-resolve --experimental-vm-modules\" jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@release-it-plugins/workspaces": "^3.2.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "@types/source-map-support": "^0.5.4",
    "@w4rlock/semantic-release-plugin-decorators": "^1.0.3",
    "babel-plugin-source-map-support": "^2.1.3",
    "depcheck": "^1.4.3",
    "global-jsdom": "^9.0.1",
    "jest": "^29.5.0",
    "jsdom": "^22.0.0",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.8.1",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "react-lorem-ipsum": "^1.4.10",
    "release-it": "^15.10.1",
    "semantic-release": "^21.0.2",
    "semantic-release-monorepo": "^7.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grexie/pages.git"
  },
  "release-it": {
    "github": true,
    "npm": {
      "ignoreVersion": true,
      "versionArgs": [
        "--allow-same-version",
        "--workspaces-update=false"
      ],
      "publishArgs": [
        "--include-workspace-root"
      ]
    },
    "plugins": {
      "@release-it-plugins/workspaces": true
    }
  }
}
