{
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "clean": "git clean -dfX && yarn && yarn build",
    "start": "tsc -b --watch --preserveWatchOutput",
    "build": "tsc -b",
    "publish": "tsc -b && monorepo workspaces npm publish",
    "link": "monorepo workspaces yarn link",
    "unlink": "monorepo workspaces yarn unlink"
  },
  "devDependencies": {
    "@types/node": "^17.0.41",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
