{
  "version": "0.0.21",
  "private": true,
  "workspaces": [
    "packages/pages*",
    "packages/plugins/*",
    "packages/runtime/*",
    "packages/utils/*",
    "packages/webpack/*",
    "tools/*"
  ],
  "scripts": {
    "example": "monorepo example",
    "clean": "git clean -dfX && yarn install --force && yarn build",
    "start": "npm-run-all -p start:types start:build",
    "start:types": "yarn build:types -w --preserveWatchOutput",
    "start:build": "monorepo run -p watch",
    "build": "yarn build:types && monorepo run build",
    "build:types": "tsc -b",
    "publish": "yarn build && monorepo workspaces npm publish",
    "depcheck": "monorepo workspaces depcheck --ignores @jest/globals --ignore-dirs lib 2>&1",
    "dev:link": "monorepo workspaces yarn link",
    "dev:unlink": "monorepo workspaces yarn unlink",
    "release": "release-it",
    "test": "NODE_OPTIONS='--no-warnings --experimental-specifier-resolution=node --experimental-import-meta-resolve --experimental-vm-modules' jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@release-it-plugins/workspaces": "^2.0.1",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.41",
    "@types/source-map-support": "^0.5.4",
    "babel-jest": "^29.3.1",
    "babel-plugin-source-map-support": "^2.1.3",
    "depcheck": "^1.4.3",
    "jest": "^29.3.1",
    "jest-light-runner": "^0.4.1",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-lorem-ipsum": "^1.4.10",
    "release-it": "^15.5.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "webpack": "^5.75.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "plugins": {
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/pages*",
          "packages/plugins/*",
          "packages/runtime/*",
          "packages/utils/*",
          "packages/webpack/*"
        ]
      }
    },
    "npm": false
  }
}
