{
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "clean": "git clean -dfX && yarn install --force && yarn build",
    "start": "tsc -b --watch --preserveWatchOutput",
    "build": "tsc -b",
    "publish": "yarn build && monorepo workspaces npm publish",
    "link": "monorepo workspaces yarn link",
    "unlink": "monorepo workspaces yarn unlink",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/node": "^17.0.41",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "release-it-yarn-workspaces": "^2.0.1",
    "release-it": "^14.12.5"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": {
        "workspaces": [
          "packages/*"
        ]
      }
    },
    "npm": false
  }
}
