{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/",
    "rootDir": "./",
    "baseUrl": "./src/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@grexie/pages": ["../../packages/pages/src"],
      "@grexie/pages-plugin-sass": ["../../packages/plugins/sass/src"]
    }
  },
  "include": ["pages-env.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../packages/pages" },
    { "path": "../../packages/plugins/sass" }
  ]
}
